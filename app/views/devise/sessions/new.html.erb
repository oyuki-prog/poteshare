<div class="container">
  <h2 class="title">ログイン</h2>
  <div class="form">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "shared/devise" %>
    <div class="form__row">
      <%= f.label :email, class: 'form__label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form__field', required: true  %>
    </div>

    <div class="form__row">
      <%= f.label :password, class: 'form__label' %>
      <%= f.password_field :password, autocomplete: "current-password", class:'form__field', required: true  %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me%>
        <%= f.label :remember_me%>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: 'btn btn__form__login' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>
