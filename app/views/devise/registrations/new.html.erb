<div class="container">
  <h2 class="title">新規ユーザー登録</h2>

  <div class="form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form__row">
        <%= f.label :name, class: 'form__label required' %>
        <%= f.text_field :name, autofocus: true, class:'form__field', required: true %>
      </div>

      <div class="form__row">
        <%= f.label :email, class: 'form__label required' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form__field', required: true %>
      </div>

      <div class="form__row">
        <%= f.label :password, class: 'form__label required' %>
        <%= f.password_field :password, autocomplete: "new-password", class:'form__field', required: true %>
      </div>

      <div class="form__row">
        <%= f.label :password_confirmation, class: 'form__label required' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form__field', required: true %>
      </div>

      <div class="actions">
        <%= f.submit "登録する", class: 'btn btn__signup' %>
      </div>
    <% end %>
  <%= render "devise/shared/links" %>
  </div>
</div>
