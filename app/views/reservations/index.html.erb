<div class="container">
  <table>
    <tr>
      <th>ルーム画像</th>
      <th>ルーム名</th>
      <th>ルーム紹介</th>
      <th>合計料金</th>
      <th>チェックイン</th>
      <th>チェックアウト</th>
      <th>予約確定日時</th>
    </tr>
    <% if @reservations %>
      <% @reservations.each do |reservation| %>
        <tr>
            <td><%= image_tag "#{reservation.room.image}", class: 'room__img'%></td>
            <td>
              <a href="/rooms/<%= reservation.room_id %>">
                <%= reservation.room.name %>
              </a>
            </td>
            <td><%= reservation.room.introduction %></td>
            <td><%= reservation.total_price %></td>
            <td><%= reservation.start_date %></td>
            <td><%= reservation.end_date %></td>
            <td><%= reservation.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        </tr>
      <% end %>
    <% end %>
  </table>
</div>
